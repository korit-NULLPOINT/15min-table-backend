<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nullpoint.fifteenmintable.mapper.CommentMapper">
    <resultMap id="CommentRespDtoResultMap" type="com.nullpoint.fifteenmintable.dto.comment.CommentRespDto">
        <id property="commentId" column="comment_id"/>
        <result property="recipeId" column="recipe_id"/>
        <result property="userId" column="user_id"/>
        <result property="content" column="content"/>
        <result property="createDt" column="create_dt"/>
        <result property="updateDt" column="update_dt"/>
    </resultMap>

    <insert id="addComment" useGeneratedKeys="true" keyProperty="commentId">
        insert into
            comment_tb
        values
            (0, #{recipeId}, #{userId}, #{content}, now(), null);
    </insert>

    <select id="getCommentListByRecipeId" resultMap="CommentRespDtoResultMap">
        select
            *
        from
            comment_tb
        where
            recipe_id = #{recipeId}
        order by
            comment_id desc;
    </select>

    <select id="getCommentListByUserId" resultMap="CommentRespDtoResultMap">
        select
            *
        from
            comment_tb
        where
            user_id = #{userId};
    </select>

    <select id="getCommentByCommentId" resultMap="CommentRespDtoResultMap">
        select
            *
        from
            comment_tb
        where
            comment_id = #{commentId};
    </select>

    <delete id="deleteComment">
        delete from
            comment_tb
        where
            comment_id = #{commentId}
        order by
            comment_id desc;
    </delete>
</mapper>