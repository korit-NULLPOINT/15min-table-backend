<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nullpoint.fifteenmintable.mapper.BoardMapper">
    <resultMap id="BoardResultMap" type="com.nullpoint.fifteenmintable.entity.Board">
        <id property="boardId" column="board_id"/>
        <result property="title" column="title"/>
        <result property="boardTypeId" column="board_type_id"/>
        <result property="createDt" column="create_dt"/>
        <result property="updateDt" column="update_dt"/>
        <association property="boardType" resultMap="BoardTypeResultMap"/>
    </resultMap>

    <resultMap id="BoardTypeResultMap" type="com.nullpoint.fifteenmintable.entity.BoardType">
        <id property="boardTypeId" column="board_type_id"/>
        <result property="boardTypeName" column="board_type_name"/>
        <result property="boardTypeNameKor" column="board_type_name_kor"/>
    </resultMap>

    <insert id="createBoard" useGeneratedKeys="true" keyProperty="boardId">
        insert into
            board_tb
        values
            (0, #{title}, #{boardTypeId}, now(), null);
    </insert>

    <select id="findAll" resultMap="BoardResultMap">
        select
            bt.*,
            btt.*
        from
            board_tb bt
            join board_type_tb btt (btt.board_type_id = bt.board_type_id);
    </select>

    <select id="findByTitle" resultMap="BoardResultMap">
        select
            bt.*,
            btt.*
        from
            board_tb bt
            join board_type_tb btt (btt.board_type_id = bt.board_type_id)
        where
            bt.title = #{title};
    </select>

    <select id="findByBoardTypeId" resultMap="BoardResultMap">
        select
            bt.*,
            btt.*
        from
            board_tb bt
            join board_type_tb btt (btt.board_type_id = bt.board_type_id)
        where
            bt.board_type_id = #{boardTypeId};
    </select>

    <select id="findByBoardId" resultMap="BoardResultMap">
        select
            bt.*,
            btt.*
        from
            board_tb bt
            join board_type_tb btt (btt.board_type_id = bt.board_type_id)
        where
            bt.board_id = #{boardId};
    </select>

    <update id="updateBoard">
        update
            board_tb
        set
            title = #{title},
            board_type_id = #{boardTypeId},
            update_dt = now()
        where
            board_id = #{boardId};
    </update>

    <delete id="deleteBoard">
        delete from
            board_tb
        where
            board_id = #{boardId};
    </delete>

</mapper>