<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nullpoint.fifteenmintable.mapper.BoardMapper">

    <resultMap id="BoardResultMap" type="com.nullpoint.fifteenmintable.entity.Board">
        <id property="boardId" column="board_id"/>
        <result property="title" column="title"/>
        <result property="createDt" column="create_dt"/>
        <result property="updateDt" column="update_dt"/>
        <association
                property="boardType"
                javaType="com.nullpoint.fifteenmintable.entity.BoardType"
                column="board_type_id"
                resultMap="BoardTypeResultMap"/>
    </resultMap>

    <resultMap id="BoardTypeResultMap" type="com.nullpoint.fifteenmintable.entity.BoardType">
        <id property="boardTypeId" column="board_type_id"/>
        <result property="boardTypeName" column="board_type_name"/>
        <result property="boardTypeNameKor" column="board_type_name_kor"/>
    </resultMap>

    <insert id="createBoard"
            useGeneratedKeys="true"
            keyProperty="boardId">
        INSERT INTO board_tb (
        title,
        board_type_id,
        create_dt
        )
        VALUES (
        #{title},
        #{boardType.boardTypeId},
        NOW()
        )
    </insert>

    <select id="findAll" resultMap="BoardResultMap">
        SELECT
        bt.*,
        btt.*
        FROM
        board_tb bt
        JOIN board_type_tb btt
        ON btt.board_type_id = bt.board_type_id
    </select>

    <select id="findByTitle" resultMap="BoardResultMap">
        SELECT
        bt.*,
        btt.*
        FROM
        board_tb bt
        JOIN board_type_tb btt
        ON btt.board_type_id = bt.board_type_id
        WHERE
        bt.title = #{title}
    </select>
    <select id="findByBoardTypeId" resultMap="BoardResultMap">
        SELECT
        bt.*,
        btt.*
        FROM
        board_tb bt
        JOIN board_type_tb btt
        ON btt.board_type_id = bt.board_type_id
        WHERE
        bt.board_type_id = #{boardTypeId}
    </select>

    <select id="findByBoardId" resultMap="BoardResultMap">
        SELECT
        bt.*,
        btt.*
        FROM
        board_tb bt
        JOIN board_type_tb btt
        ON btt.board_type_id = bt.board_type_id
        WHERE
        bt.board_id = #{boardId}
    </select>

    <update id="updateBoard">
        UPDATE
        board_tb
        SET
        title = #{title},
        board_type_id = #{boardType.boardTypeId},
        update_dt = NOW()
        WHERE
        board_id = #{boardId}
    </update>

    <delete id="deleteBoard">
        DELETE FROM
        board_tb
        WHERE
        board_id = #{boardId}
    </delete>

</mapper>
