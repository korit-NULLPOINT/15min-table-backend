<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nullpoint.fifteenmintable.mapper.HashtagMapper">
    <resultMap id="HashtagResultMap" type="com.nullpoint.fifteenmintable.entity.Hashtag">
        <id property="hashtagId" column="hashtag_id"/>
        <result property="name" column="name"/>
        <result property="createDt" column="create_dt"/>
    </resultMap>

    <insert id="createHashtag" useGeneratedKeys="true" keyProperty="hashtagId">
        insert into
            hashtag_tb (name, create_dt)
        values
            (#{name}, now())
    </insert>

    <delete id="deleteHashtag">
        delete from
            hashtag_tb
        where
            hashtag_id = #{hashtagId};
    </delete>

    <select id="getHashtagList" resultMap="HashtagResultMap">
        select
            *
        from
            hashtag_tb;
    </select>

    <select id="getByHashtagId" resultMap="HashtagResultMap">
        select
            *
        from
            hashtag_tb
        where
            hashtag_id = #{hashtagId};
    </select>

    <select id="getByName" resultMap="HashtagResultMap">
        select
            *
        from
            hashtag_tb
        where
            name = #{name};
    </select>

    <select id="getByKeyword" resultMap="HashtagResultMap">
        select
            *
        from
            hashtag_tb
        where
            name like concat("%", #{keyword}, "%");
    </select>
</mapper>