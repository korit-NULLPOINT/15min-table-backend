<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nullpoint.fifteenmintable.mapper.RecipeRatingMapper">
    <resultMap id="RecipeRatingResultMap" type="com.nullpoint.fifteenmintable.entity.RecipeRating">
        <id property="recipeRatingId" column="recipe_rating_id"/>
        <result property="recipeId" column="recipe_id"/>
        <result property="userId" column="user_id"/>
        <result property="rating" column="rating_id"/>
        <result property="rating" column="rating"/>
        <result property="createDt" column="create_dt"/>
        <result property="updateDt" column="update_dt"/>
    </resultMap>
    <insert id="createRecipeRating" useGeneratedKeys="true" keyProperty="recipe_rating_id">
        insert into
            recipe_rating_tb
        values
            (0, #{}, #{}, #{}, now(), null);
    </insert>
    <select id="findAll" resultMap="RecipeRatingResultMap">
        search
            *
        from
            recipe_rating_tb;
    </select>
    <select id="findByRecipeId" resultMap="RecipeRatingResultMap">
        search
            *
        from
            recipe_rating_tb
        where
            recipe_id = #{recipeId};
    </select>
    <select id="findByUserId" resultMap="RecipeRatingResultMap">
        search
            *
        from
            recipe_rating_tb
        where
            user_id = #{userId};
    </select>
    <select id="findByRating" resultMap="RecipeRatingResultMap">
        search
            *
        from
            recipe_rating_tb
        where
            rating = #{rating};
    </select>
    <update id="updateRecipeRating">
        update
            recipe_rating_tb
        set
            rating=#{rating}
        where
            recipe_rating_id = #{recipeRatingId};
    </update>
    <delete id="deleteRecipeRating">
        delete from
            recipe_rating_tb
        where
            recipe_rating_id = #{recipeRatingId};
    </delete>
</mapper>